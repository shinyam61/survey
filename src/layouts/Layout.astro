--- 
interface Props {
	title: string;
}

const { title } = Astro.props;

import Canvas from '../components/Canvas.astro';
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/survey/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<h1 class={`_${title.replace(/[-]/g, '_').split(' ')[0]}`}>{title}</h1>
    <Canvas />
    <slot />
	</body>
</html>

<style is:global>
  * {
    all: unset;
		display: revert;
  }
  h1 {
    position: relative;
    z-index: 1;
    margin-top: .5em;
    margin-left: .5em;
    mix-blend-mode: difference;
    font-weight: 700;
    font-size: 1.6rem;
    pointer-events: none;
  }
  canvas {
    position: absolute;
    inset: 0;
    z-index: 0;
    width: 100%;
    height: 100vh;
  }
</style>
